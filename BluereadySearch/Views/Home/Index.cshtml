@{
    Layout = "/Views/Shared/_Layout_index.cshtml";
    ViewData["Title"] = "Home Page";
}
<div style="position:relative;top:-50px;">
    <img src="~/images/background.png" alt="Norway" style="width:100%;">
    <div class="text-block">
        @*<h4>Nature</h4>
        <p>What a beautiful sunrise</p>*@
    </div>
</div>
<div id="myCarousel" class="carousel slide container" data-ride="carousel" data-interval="6000" style="position:absolute;top:100px;left:0px;right:0px;">
    <ol class="carousel-indicators">
         <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
         <li data-target="#myCarousel" data-slide-to="1"></li>
         <li data-target="#myCarousel" data-slide-to="2"></li>
     </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    We make search look easy in your organization.
                    <a class="btn btn-default" href="/Home/About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Make your directories searchable both privately and publically
                    <a class="btn btn-default" href="/docs">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Use your data to create a search platform
                    <a class="btn btn-default" href="/docs/searchplatform">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
     <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="display:none;">
         <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
         <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="display:none; ">
         <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
         <span class="sr-only">Next</span>
     </a>
</div>
<div id="whatyoucando">What can you do with our system?</div>
<div style="background:black;width:100%;">
    <div style="position:relative;margin:auto;width:50%;padding:20px;">
        <div class="container_left">
            <img src="~/images/packages.svg" alt="Avatar" class="image_left" style="background:white;border-radius:2px;">
            <div class="overlay">
                <div class="text">
                    <button id="private_docs" class="btn btn-default">Private Docs</button>
                </div>
            </div>
        </div>

        <div class="container_right">
            <img src="~/images/openboxs.svg" alt="Avatar" class="image_right" style="background:white;border-radius:2px;">
            <div class="overlay">
                <div class="text">
                    <button id="public_docs" class="btn btn-default">Public Docs</button>
                </div>
            </div>
        </div>
    </div>
</div>

